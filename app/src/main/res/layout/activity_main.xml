<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <fragment
                    android:id="@+id/main_activity__frag_top_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:name="com.example.nastoyshiishashlik.fragments.HeaderButtonFragment"
                    tools:layout="@layout/fragment_header_button" />

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/main_activity_ns_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                        <fragment
                            android:id="@+id/main_activity__frag_menu_icons"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:name="com.example.nastoyshiishashlik.fragments.MenuFragment"
                            tools:layout="@layout/fragment_menu" />

                        <com.daimajia.slider.library.SliderLayout
                            android:id="@+id/slider"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            />



                        <TextView
                            android:id="@+id/main_activity__text_view_hits"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            style="@style/activity_style.NAME_SECTION"
                            android:text="НАШИ ХИТЫ"
                            android:layout_gravity="center_horizontal"
                            />

                        <LinearLayout
                            android:id="@+id/conteiner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            />

                        <fragment
                            android:id="@+id/main_activity__bottom_menu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:name="com.example.nastoyshiishashlik.fragments.BottomMenuFragment"
                            tools:layout="@layout/bottom_menu"/>

                        </LinearLayout>
                </androidx.core.widget.NestedScrollView>

        </LinearLayout>

        <ImageView
            android:id="@+id/toUp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_up"
            android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            />
</RelativeLayout>
