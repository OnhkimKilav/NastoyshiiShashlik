<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ListProductsByDishesActivity"
    android:background="@drawable/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.fragment.app.FragmentContainerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/list_product_activity__frag_top_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:name="com.example.nastoyshiishashlik.fragments.HeaderButtonFragment" />

        <androidx.fragment.app.FragmentContainerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/list_product_activity__frag_menu_icons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/list_product_activity__frag_top_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:name="com.example.nastoyshiishashlik.fragments.MenuFragment" />

        <TextView
            android:id="@+id/list_product_activity__text_view_hits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/list_product_activity__frag_menu_icons"
            app:layout_constraintLeft_toLeftOf="@id/list_product_activity__frag_menu_icons"
            app:layout_constraintRight_toRightOf="@id/list_product_activity__frag_menu_icons"
            android:layout_marginTop="10dp"
            style="@style/activity_style.NAME_SECTION"
            android:text="НАШИ ХИТЫ"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_product_activity__rv_hits"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:background="#20FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/list_product_activity__text_view_hits"
            />

        <androidx.fragment.app.FragmentContainerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/list_product_activity__bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/list_product_activity__rv_hits"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:name="com.example.nastoyshiishashlik.fragments.BottomMenuFragment" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>