<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:id="@+id/main_activity_ns_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.DeliveryPaymentActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.fragment.app.FragmentContainerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/delivery_payment_activity__frag_top_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:name="com.example.nastoyshiishashlik.fragments.HeaderButtonFragment" />

        <androidx.fragment.app.FragmentContainerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/delivery_payment_activity__frag_menu_icons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/delivery_payment_activity__frag_top_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:name="com.example.nastoyshiishashlik.fragments.MenuFragment" />


        <LinearLayout
            android:id="@+id/delivery_payment_activity__ll_baner_delivery"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/delivery_payment1"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/delivery_payment_activity__frag_menu_icons">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/montserrat_bold"
                android:text="ДОСТАВКА И ОПЛАТА"
                android:gravity="bottom"
                android:paddingBottom="10dp"
                android:layout_gravity="center"
                android:layout_weight="50"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/montserrat_light"
                android:text="Принимаем заказы с 8:00 утра до 22:00 вечера"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:layout_weight="50"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/delivery_payment_activity__tv_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/montserrat_light"
            android:text="ДОСТАВКА"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/delivery_payment_activity__ll_baner_delivery"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:id="@+id/delivery_payment_activity__ll_free_delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/delivery_payment_activity__tv_delivery"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/frame_red">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/montserrat_bold"
                android:textSize="13sp"
                android:text="БЕСПЛАТНАЯ ДОСТАВКА"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:paddingBottom="10dp"
                android:layout_gravity="center"
                android:layout_weight="50"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/montserrat_light"
                android:text="по Киеву при заказе от 500 грн.\nЦена доставки заказов на сумму\nдо 500 грн - 70 грн"
                android:gravity="center"
                android:textSize="12sp"
                android:paddingBottom="10dp"
                android:layout_gravity="center"
                android:layout_weight="50"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/delivery_payment_activity__ll_free_pickup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/delivery_payment_activity__ll_free_delivery"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/frame_red">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/montserrat_bold"
                android:textSize="13sp"
                android:text="САМОВЫВОЗ"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:paddingBottom="10dp"
                android:layout_gravity="center"
                android:layout_weight="50"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/montserrat_light"
                android:text="вы получите скидку 10%\nна заказ при самовывозе\nАдрес: ул. Святошинская, 23"
                android:gravity="center"
                android:textSize="12sp"
                android:paddingBottom="10dp"
                android:layout_gravity="center"
                android:layout_weight="50"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/delivery_payment_activity__tv_time_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/montserrat_light"
            android:text="ВРЕМЯ ДОСТАВКИ"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/delivery_payment_activity__ll_free_pickup"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="5dp"
            />

        <LinearLayout
            android:id="@+id/delivery_payment_activity__ll_time_delivery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/delivery_payment_activity__tv_time_delivery"
            app:layout_constraintLeft_toLeftOf="@id/delivery_payment_activity__ll_free_pickup"
            app:layout_constraintRight_toRightOf="@id/delivery_payment_activity__ll_free_pickup"
            android:orientation="horizontal"
            android:paddingTop="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/frame_translucent"
                android:layout_weight="50"
                android:gravity="center"
                android:layout_marginEnd="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/montserrat_bold"
                    android:text="ПРАВЫЙ БЕРЕГ КИЕВА"
                    android:textSize="8sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/montserrat_light"
                    android:textSize="8sp"
                    android:text="60 - 90 минут" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/frame_translucent"
                android:layout_weight="50"
                android:gravity="center"
                android:layout_marginStart="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/montserrat_bold"
                    android:text="ЛЕВЫЙ БЕРЕГ КИЕВА"
                    android:textSize="8sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/montserrat_light"
                    android:textSize="8sp"
                    android:text="90 - 120 минут" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/delivery_payment_activity__ll_baner_delivery2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/delivery_payment2"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/delivery_payment_activity__ll_time_delivery">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/montserrat_bold"
                android:textSize="10sp"
                android:text="БЫСТРО ДОСТАВИМ В ЛЮБУЮ ТОЧКУ КИЕВА\nИ ЕГО ОКРЕСТНОСТИ"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/montserrat_medium"
                android:textSize="8sp"
                android:text="Шашлык приедет к вам горячим, ведь у нас\nсобственная самая шустрая служба доставкив Киеве"
                android:layout_gravity="center"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/montserrat_bold"
                android:textSize="10sp"
                android:text="ПРЕДВАРИТЕЛЬНЫЙ ЗАКАЗ"
                android:layout_gravity="center"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/montserrat_medium"
                android:textSize="8sp"
                android:text="Вы можете осуществлять заказ на определенную\nдату и время"
                android:layout_gravity="center"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/montserrat_bold"
                android:textSize="8sp"
                android:text="Наша доставка никогда не опаздывает!\nНе опоздайте и вы заказать"
                android:layout_gravity="center"
                android:gravity="top"
                android:layout_weight="1"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/delivery_payment_activity__tv_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/montserrat_light"
            android:text="ОПЛАТА"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/delivery_payment_activity__ll_baner_delivery2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:id="@+id/delivery_payment_activity__ll_cash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/delivery_payment_activity__tv_payment"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/frame_red">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/montserrat_bold"
                android:textSize="13sp"
                android:text="НАЛИЧНЫМИ"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="50"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/montserrat_light"
                android:text="курьеру при получении\nзаказа"
                android:gravity="center"
                android:textSize="12sp"
                android:paddingBottom="10dp"
                android:layout_gravity="center"
                android:layout_weight="50"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/delivery_payment_activity__ll_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/delivery_payment_activity__ll_cash"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/frame_red">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/montserrat_bold"
                android:textSize="13sp"
                android:text="КАРТОЙ КУРЬЕРУ"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="50"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/montserrat_light"
                android:text="при помощи мобильного терминала\nпри получении заказа"
                android:gravity="center"
                android:textSize="12sp"
                android:paddingBottom="10dp"
                android:layout_gravity="center"
                android:layout_weight="50"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/delivery_payment_activity__ll_online"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/delivery_payment_activity__ll_card"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/frame_red">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/montserrat_bold"
                android:textSize="13sp"
                android:text="КАРТОЙ ОНЛАЙН"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="50"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/montserrat_light"
                android:text="с помощью платежных систем\nVisa и MasterCard"
                android:gravity="center"
                android:textSize="12sp"
                android:paddingBottom="10dp"
                android:layout_gravity="center"
                android:layout_weight="50"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/delivery_payment_activity__ll_baner_delivery3"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/delivery_payment1"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/delivery_payment_activity__ll_online">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/montserrat_bold"
                android:text="УДОБНАЯ ОПЛАТА ЗАКАЗА"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/montserrat_light"
                android:textSize="8sp"
                android:text="Выбирайте удобная способ оплата: банковской картой\nчерез терминал наличными при получении,\nоплата картой онлайн с помощью платежной\nсистемы. У нас доступны все виды оплаты и с нами\nможно договорится, если что-то пошло не по плану."
                android:gravity="top"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/montserrat_light"
                android:textSize="8sp"
                android:text="Спасибо, что вы выбираете нас!"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/delivery_payment_activity__bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/delivery_payment_activity__ll_baner_delivery3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:name="com.example.nastoyshiishashlik.fragments.BottomMenuFragment" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>