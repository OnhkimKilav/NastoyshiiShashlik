<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/sh_fr_white_translucent_back_black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Спасибо за заказ!"
        style="@style/montserrat_bold"
        android:textSize="22sp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="В ближайшее время наш менеджер свяжется с вами для уточнения деталей заказа"
        style="@style/montserrat_medium"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/create_oder_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="На главную"
        style="@style/style_button"
        android:layout_gravity="center"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"/>
</LinearLayout>
