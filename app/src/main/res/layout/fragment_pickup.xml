<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/sh_fr_white_translucent_back_black_translucent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Контакты"
        style="@style/montserrat_light"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:background="@drawable/sh_fr_white_back_transparent_radius_5dp"
        android:hint="Имя"
        android:textColorHint="@color/white"
        style="@style/montserrat_light"
        android:textSize="12sp"
        android:gravity="left"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:paddingStart="5dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:background="@drawable/sh_fr_white_back_transparent_radius_5dp"
        android:hint="Телефон"
        android:textColorHint="@color/white"
        style="@style/montserrat_light"
        android:textSize="12sp"
        android:gravity="left"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="5dp"
        android:paddingStart="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата и время"
        style="@style/montserrat_light"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <fragment
        android:id="@+id/delivery__calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.example.nastoyshiishashlik.fragments.CalendarFragment"
        tools:layout="@layout/fragment_calendar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Оплата"
        style="@style/montserrat_light"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <fragment
        android:id="@+id/delivery__payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:name="com.example.nastoyshiishashlik.fragments.DeliveryPaymentFragment"
        tools:layout="@layout/fragment_delivery_payment"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/MyCheckBox"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Одноразовая посуда"
            style="@style/montserrat_light"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/sh_fr_white_back_transparent_radius_5dp">

            <ImageButton
                android:id="@+id/minus"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_horizontal_rule_24"
                android:backgroundTint="@color/transparent"/>


            <View
                android:layout_width="1sp"
                android:background="@color/white"
                android:layout_height="match_parent"
                android:paddingStart="10dp"/>

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1sp"
                android:background="@color/white"
                android:layout_height="match_parent"
                android:paddingEnd="10dp"/>

            <ImageButton
                android:id="@+id/plus"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_add_24"
                android:backgroundTint="@color/transparent"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="персон"
            style="@style/montserrat_light"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="34dp"
        >

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/MyCheckBox" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Перезвоните мне для уточнения деталей заказа"
            style="@style/montserrat_light"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:inputType="text"
        android:background="@drawable/sh_fr_white_back_transparent_radius_5dp"
        android:hint="Добавить коментарий к заказу"
        android:textColorHint="@color/white"
        style="@style/montserrat_light"
        android:textSize="12sp"
        android:gravity="left"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        />
</LinearLayout>