<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:id="@+id/contacts_activity_ns_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.ContactsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.fragment.app.FragmentContainerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/contacts_activity__inc_top_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:name="com.example.nastoyshiishashlik.fragments.HeaderButtonFragment" />


        <androidx.fragment.app.FragmentContainerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/contacts_activity_frag_menu_icons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/contacts_activity__inc_top_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:name="com.example.nastoyshiishashlik.fragments.MenuFragment" />

        <LinearLayout
            android:id="@+id/contacts_activity__ll_baner_delivery"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/contacts_fon1"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/contacts_activity_frag_menu_icons">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/montserrat_bold"
                android:textSize="24sp"
                android:text="КОНТАКТЫ"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/contacts_activity__frag_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/frame_transparent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contacts_activity__ll_baner_delivery"
            android:name="com.example.nastoyshiishashlik.fragments.MapsFragment" />

        <LinearLayout
            android:id="@+id/contacts_activity__ll_contacts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/contacts_activity__frag_map"
            app:layout_constraintLeft_toLeftOf="@id/contacts_activity__frag_map"
            app:layout_constraintRight_toRightOf="@id/contacts_activity__frag_map"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="КОНТАКТЫ"
                style="@style/montserrat_medium"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_baseline_location_on_24"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Кафе «Настоящий шашлык»"
                        style="@style/montserrat_light"
                        android:textSize="10sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Украина, г. Киев, ул. Святошинская 23"
                        style="@style/montserrat_light"
                        android:textSize="10sp"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_baseline_phone_24"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+38-067-251-59-45"
                        style="@style/montserrat_light"
                        android:textSize="10sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+38-095-114-88-28"
                        style="@style/montserrat_light"
                        android:textSize="10sp"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_baseline_email_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nashaslyk@gmail.com"
                    style="@style/montserrat_light"
                    android:textSize="10sp"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:layout_marginStart="5dp">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/instagram"/>
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/telegram"
                    android:layout_marginStart="10dp"/>
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/viber"
                    android:layout_marginStart="10dp"/>
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/facebook_message"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contacts_activity__ll_alcove"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/contacts_activity__ll_contacts"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            android:background="@drawable/frame_translucent"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:src="@drawable/contacts_fon2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="В нашем кафе есть уютная деревянная беседка\nрасчитанная на 8 персон. Это прекрасная\nвозможность провести время с друзьями и семьей в\nукромном местечке с вкусной едой прямиком с мангала."
                    style="@style/montserrat_light"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Беседку можно забронировать на\nопределенную дату и время. Для этого нужно просто\nпозвонить нам."
                    style="@style/montserrat_light"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Если Вы живете или работаете недалеко от метро\nСвятошин, заходите в гости!\nВкусно накормить и радушно встретить обещаем!"
                    style="@style/montserrat_light"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/contacts_activity__ll_baner2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/contacts_fon3"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/contacts_activity__ll_alcove"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/montserrat_medium"
                android:textSize="10dp"
                android:text="У «Настоящего шашлыка» собственная служба доставки,\nблагодаря чему мы доставляем ваши заказы\nмаксимально быстро."
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/montserrat_medium"
                android:textSize="10dp"
                android:text="Время доставки по Киеву:\nправый берег - 60-90 минут,\nлевый берег - 90-120 минут."
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/montserrat_medium"
                android:textSize="10dp"
                android:text="Принимаем заказы на празднование\nДня рождения, вечеринки или корпоратива."
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contacts_activity__ll_message"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_translucent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/contacts_activity__ll_baner2"
            app:layout_constraintLeft_toLeftOf="@id/contacts_activity__ll_alcove"
            app:layout_constraintRight_toRightOf="@id/contacts_activity__ll_alcove">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ОТПРАВЬТЕ НАМ СООБЩЕНИЕ"
                style="@style/montserrat_medium"
                android:textSize="12sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Мы обязательно ответим Вам в ближайшее время"
                android:textSize="10dp"
                android:gravity="center"
                style="@style/montserrat_light"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingEnd="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ваше имя"
                        style="@style/montserrat_light"
                        android:textSize="12sp"/>

                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:background="@drawable/fone_white"
                        android:hint="Ваше имя"
                        android:layout_marginTop="5dp"
                        style="@style/montserrat_light"
                        android:textSize="10sp"
                        android:gravity="left"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ваш E-Mail"
                        style="@style/montserrat_light"
                        android:textSize="12sp"/>

                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/fone_white"
                        android:hint="Ваш E-Mail"
                        android:layout_marginTop="5dp"
                        style="@style/montserrat_light"
                        android:textSize="10sp"
                        android:gravity="left"
                        android:textColor="@color/black"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сообщение"
                    style="@style/montserrat_light"
                    android:textSize="12sp"/>

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:lines="4"
                    android:background="@drawable/fone_white"
                    android:hint="Сообщение"
                    android:layout_marginTop="5dp"
                    style="@style/montserrat_light"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:gravity="left"/>

            </LinearLayout>

            <Button
                style="@style/montserrat_bold"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ОТПРАВИТЬ"
                android:layout_gravity="center"
                app:backgroundTint="#D50303"
                android:layout_marginTop="10dp"/>


        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/contacts_activity__ll_message"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:name="com.example.nastoyshiishashlik.fragments.BottomMenuFragment" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>